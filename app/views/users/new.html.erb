<div class="entrance-text">
  <h1>Welcome to Bughouse! Please Signup to continue</h1>
</div>

<%= form_for :user, url: '/users' do |f| %>
<div class="form-container col l4">
  <div class="row">
    <div class="col l4">

    </div>
    <div class="input-field col l4">
      <%= f.text_field :email %>
      <label for="email">Email</label>
    </div>
    <div class="col l4">

    </div>
  </div>
  <div class="row">
    <div class="col l4">

    </div>
    <div class="input-field col l4">
      <%= f.password_field :password %>
      <label for="password">Password</label>
    </div>
    <div class="col l4">

    </div>
  </div>

  <div class="row">
    <div class="col l4">

    </div>
    <div class="input-field col l4">
      <%= f.password_field :password_confirmation %>
      <label for="password">Password Confirmation</label>
    </div>
    <div class="col l4">

    </div>
  </div>

  <div class="center-btn">
    <a class="waves-effect waves-light btn"><%= f.submit "Submit" %></a>
  </div>

</div>

<% end %>

